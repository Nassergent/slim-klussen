          <!-- FAQ items -->
          <div class="space-y-3" data-animate-stagger>
            {dienst.faqs.map((faq, index) => (
              <details class="group bg-white border border-gray-200 hover:border-[#d67b3a]/30 shadow-sm rounded-xl transition-all duration-200">
