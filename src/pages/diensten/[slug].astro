---
import Layout from '../../layouts/Layout.astro';
import { diensten } from '../../data/diensten';
import type { GetStaticPaths } from 'astro';

export const prerender = true;

export const getStaticPaths: GetStaticPaths = () => {
  return diensten.map((dienst) => ({
    params: { slug: dienst.slug },
    props: { dienst },
  }));
};

const { dienst } = Astro.props;

const siteUrl = 'https://slim-klussen.be';

const serviceSchemaData = {
  "@type": "Service",
  "name": dienst.naam,
  "description": dienst.korteOmschrijving,
  "url": `${siteUrl}/diensten/${dienst.slug}`,
  "provider": {
    "@type": "HomeAndConstructionBusiness",
    "name": "SLIM â€” Klussen & Renoveren",
    "url": siteUrl,
    "telephone": "+32487726546",
    "email": "slim.klussen@gmail.com",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Wanzelestraat 27",
      "addressLocality": "Schellebelle",
      "addressRegion": "Oost-Vlaanderen",
      "postalCode": "9260",
      "addressCountry": "BE"
    },
    "areaServed": {
      "@type": "State",
      "name": "Oost-Vlaanderen"
    }
  },
  "areaServed": {
    "@type": "State",
    "name": "Oost-Vlaanderen"
  }
};

const breadcrumbItems = [
  { name: "Home", url: siteUrl },
  { name: "Diensten", url: `${siteUrl}/#diensten` },
  { name: dienst.naam, url: `${siteUrl}/diensten/${dienst.slug}` },
];
---

<Layout
  title={dienst.metaTitle}
  description={dienst.metaDescription}
  canonical={`${siteUrl}/diensten/${dienst.slug}`}
  keywords={dienst.keywords}
  faqSchema={dienst.faqs}
  serviceSchema={serviceSchemaData}
  breadcrumbs={breadcrumbItems}
>

  <!-- Skip link -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-[#d67b3a] focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:text-sm focus:font-semibold">Ga naar inhoud</a>

  <!-- ==================== HEADER / NAV ==================== -->
  <header class="bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm sticky top-0 z-50" role="banner">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5">
        <img src="/logo.webp" alt="SLIM Klussen & Renoveren" class="h-10 w-auto" />
      </a>

      <!-- Desktop nav -->
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-gray-600" aria-label="Hoofdnavigatie">
        <a href="/" class="hover:text-[#d67b3a] transition-colors nav-link-animated">Home</a>
        <a href="/#diensten" class="text-[#d67b3a] font-semibold">Diensten</a>
        <a href="/over-ons" class="hover:text-[#d67b3a] transition-colors nav-link-animated">Over ons</a>
        <a href="/#portfolio" class="hover:text-[#d67b3a] transition-colors nav-link-animated">Portfolio</a>
        <a href="/#werkwijze" class="hover:text-[#d67b3a] transition-colors nav-link-animated">Werkwijze</a>
