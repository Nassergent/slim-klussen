      <div class="max-w-4xl mx-auto px-4 sm:px-6">

        <!-- Content paragraphs -->
        <div class="space-y-6 mb-16" data-animate>
          {dienst.content.map((paragraph) => (
            <p class="text-gray-600 text-base md:text-lg leading-relaxed">
              {paragraph}
            </p>
          ))}
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200 mb-12" data-animate></div>

        <!-- Andere diensten -->
        <div data-animate>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Andere klusdiensten van SLIM</h2>
          <div class="flex flex-wrap gap-3">
            {diensten
              .filter((d) => d.slug !== dienst.slug)
              .map((d) => (
                <a
                  href={`/diensten/${d.slug}`}
