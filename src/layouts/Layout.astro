    <!-- FAQ Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        { "@type": "Question", "name": "Welke klussen voert SLIM uit?", "acceptedAnswer": { "@type": "Answer", "text": "Herstellingen, montage, kleine renovaties, afbraak met recuperatie en herplaatsing van materialen. Van een lekkende kraan tot een complete badkamerrenovatie." } },
